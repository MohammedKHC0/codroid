<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="subtitle"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ThemeOverlay.Material3.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/material_16dp"
            android:paddingVertical="@dimen/material_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/material_16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Material3.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/material_8dp"
                    android:gravity="center"
                    android:text="@{title}"
                    android:textStyle="bold"
                    app:drawableRightCompat="@drawable/ic_android_black_24dp" />

                <TextView
                    style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{subtitle}" />
            </LinearLayout>

            <org.codroid.body.widget.Divider
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/material_icon_small"
                android:layout_gravity="center_vertical"
                app:backgroundColor="@color/material_dynamic_primary40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/material_16dp"
                android:layout_weight="1">

                <org.codroid.body.widgets.StatusTag
                    style="@style/StatusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UTF-8" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            style="@style/Widget.Material3.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />
    </LinearLayout>
</layout>