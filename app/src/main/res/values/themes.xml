<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Codroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="StatusInfo">
        <item name="android:fontFamily">?attr/font</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="borderWidth">1dp</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="borderColor">?attr/colorOutline</item>
    </style>
</resources>